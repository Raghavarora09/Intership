pipeline {
    agent any

    stages {
        stage('Determine OS') {
            steps {
                script {
                    def isWindows = isUnix() ? false : true
                    if (isWindows) {
                        load 'Jenkinsfile.windows'
                    } else {
                        load 'Jenkinsfile.linux'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Main pipeline completed'
        }
        failure {
            echo 'Main pipeline failed'
        }
    }
}
