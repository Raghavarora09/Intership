pipeline {
    agent any

    stages {
        stage('Determine OS') {
            steps {
                script {
                    if (isUnix()) {
                        echo "Loading Linux pipeline..."
                        load 'jenkins/linuxPipeline.groovy'
                    } else {
                        echo "Loading Windows pipeline..."
                        load 'jenkins/windowsPipeline.groovy'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Main pipeline completed'
        }
        failure {
            echo 'Main pipeline failed'
        }
    }
}
